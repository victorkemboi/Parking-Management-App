<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/park_marker"
        android:id="@+id/park_marker_img"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:background="@android:color/transparent"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/park_marker_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        >
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:cardCornerRadius="2dp"
            app:cardElevation="2dp">

        <TextView
            android:layout_gravity="start"
            android:text="janet John"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:padding="@dimen/spacing_middle"
            android:textColor="@color/white"
            android:alpha="0.8"
            android:background="@drawable/rounded_black_rectangle"
            android:id="@+id/name"

           />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>