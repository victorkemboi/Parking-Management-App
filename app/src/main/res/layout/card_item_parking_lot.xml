<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/parking_item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/the_hub"

            />



        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/parking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="The Hub"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/grey_90"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginTop="@dimen/spacing_small"/>



            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/grey_60"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parking_name"

                android:layout_marginTop="@dimen/spacing_medium"/>

            <TextView
                android:id="@+id/date_of_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Aug 22"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/grey_60"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/date_title"
                app:layout_constraintTop_toBottomOf="@id/parking_name"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:id="@+id/time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/grey_60"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"

                android:layout_marginTop="@dimen/spacing_medium"/>

            <TextView
                android:id="@+id/time_of_booked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7:00 AM"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/grey_60"
                android:textSize="12sp"
                app:layout_constraintLeft_toRightOf="@id/time_title"
                app:layout_constraintTop_toBottomOf="@id/date_of_booking"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium"/>


        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>


</LinearLayout>