<LinearLayout android:layout_marginStart="@dimen/spacing_medium"
    android:layout_marginEnd="@dimen/spacing_middle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/input_layout_img_upload_one"
    android:gravity="center_horizontal"
    android:layout_marginBottom="@dimen/spacing_middle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:elevation="12dp"
        android:id="@+id/cardView1"
        android:layout_centerHorizontal="true"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.13">

        <ImageView
            android:id="@+id/display_img_upload_one"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/input_img_upload_one_txt_view"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="Select image"
        android:paddingStart="@dimen/spacing_medium"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">

        <ImageView
            android:id="@+id/input_btn_add_img_one"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:layout_anchorGravity="bottom|right|start"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/ic_photo_camera"

            />

        <ImageView

            android:id="@+id/input_btn_clear_img_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|end"
            app:layout_anchorGravity="bottom|right|end"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            app:srcCompat="@drawable/ic_clear"
            android:layout_marginStart="@dimen/spacing_middle"
            android:visibility="visible"

            />

    </LinearLayout>






</LinearLayout>