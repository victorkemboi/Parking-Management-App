<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout style="@style/RippleStyleBlack"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_mlarge"
    xmlns:card_view="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lin_lyt_parent_item"
            android:clickable="true">

            <ImageView
                android:id="@+id/card_lot_item_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/the_hub"

                />



            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_marginTop="@dimen/spacing_medium">

                <TextView
                    android:id="@+id/parking_lot_name"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:gravity="bottom"
                    android:text="The Hub"
                    android:textStyle="bold"
                    android:textColor="@color/grey_80"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />





                <TextView
                    android:id="@+id/lot_item_street_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_middle"
                    android:gravity="center"
                    android:text="Dagoretti rd"
                    android:textColor="@color/grey_60"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="13sp"/>


            </android.support.constraint.ConstraintLayout>




        </LinearLayout>


        <View android:background="@color/grey_20"
            android:layout_width = "match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</com.balysv.materialripple.MaterialRippleLayout>